{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"jsx": "react",
		"esModuleInterop": true,
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"strict": true,
		"paths": {
			"@/*": ["src/*"]
		},
		"typeRoots": ["node_modules/@types", "src/@types"],
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true
	}
}
